{
  "name": "discord-swd-bot",
  "version": "1.0.0",
  "description": "A Discord command bot for Star Wars Destiny",
  "main": "app.js",
  "scripts": {
    "test": "jest src/test",
    "start": "node app.js",
    "watch": "nodemon app.js",
    "lint": "eslint --ignore-path .gitignore .",
    "lint-fix": "eslint --fix --ignore-path .gitignore .",
    "coverage": "jest --collectCoverageFrom=**/*.{js,jsx} --coverage src/test"
  },
  "keywords": [
    "discord",
    "star",
    "wars",
    "destiny",
    "fantasy",
    "flight"
  ],
  "author": "Aaron Lee",
  "license": "MIT",
  "dependencies": {
    "axios": "0.18.0",
    "discord.js": "11.4.2",
    "discord.js-commando": "0.10.0",
    "dotenv": "6.1.0",
    "firebase-admin": "6.1.0",
    "mongoose": "5.3.12",
    "pino": "5.8.1",
    "pino-pretty": "2.2.3",
    "require-dir": "1.1.0",
    "rss-feed-emitter": "2.0.0",
    "swdestinydb-json-data": "https://github.com/fafranco82/swdestinydb-json-data.git",
    "turndown": "5.0.1"
  },
  "devDependencies": {
    "eslint": "5.9.0",
    "eslint-plugin-jest": "22.0.0",
    "eslint-plugin-prettier": "3.0.0",
    "jest": "23.6.0",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.2"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      ".gitignore"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-const": [
        "error",
        {
          "destructuring": "all"
        }
      ]
    }
  }
}
